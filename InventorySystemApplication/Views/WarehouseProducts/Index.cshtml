@model IEnumerable<InventorySystemApplication.VMs.UserProductVM>

@{
    ViewData["Title"] = "Warehouse Products";
}

<h1>Warehouse Products</h1>

<p>
    <a asp-action="Create" class="btn btn-info">Map New Products</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Product 
            </th>
            <th>
                Warehouse
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var obj in Model) {
        <tr>
            <td>
                @obj.Products.Product_Name
            </td>
            <td>
                @obj.Warehouses.Name
            </td>
          <td>
                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@obj.Id">Edit</a>
            <a class="btn btn-danger" asp-action="Delete" asp-route-id="@obj.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

<div>
    <a class="btn btn-danger" asp-area="" asp-controller="Home" asp-action="AdminMenu">Back To Menu</a>
</div>
