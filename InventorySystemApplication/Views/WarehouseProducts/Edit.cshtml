            <div class="form-group">
                <label asp-for="Warehouse_Id" class="control-label">Warehouse</label>
                <input asp-for="Warehouse_Id" class="form-control" />
                <span asp-validation-for="Warehouse_Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-warning">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
