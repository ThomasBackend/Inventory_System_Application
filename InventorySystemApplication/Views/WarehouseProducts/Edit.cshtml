@model InventorySystemApplication.Models.WarehouseProduct

@{
    ViewData["Title"] = "Edit Product Mapping";
}

<h1>Edit Product Mapping</h1>

<h4>Warehouse Product</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
